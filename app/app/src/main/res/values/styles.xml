<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Hedvig.Theme.Splash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Hedvig.Theme</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <style name="Hedvig.Theme" parent="Hedvig.Theme.V23" />

    <style name="Hedvig.Theme.Marketing.V23" parent="Hedvig.Theme">
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>

    <style name="Hedvig.Theme.Marketing" parent="Hedvig.Theme.Marketing.V23" />

    <style name="Hedvig.Theme.Chat">
        <item name="android:navigationBarColor">@color/color_background_95</item>
    </style>

    <style name="ToolbarIcon">
        <item name="android:layout_height">@dimen/chat_top_bar_button_size</item>
        <item name="android:layout_width">@dimen/chat_top_bar_button_size</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">4dp</item>
        <item name="tint">@color/icon_tint</item>
    </style>

    <style name="ToolbarIcon.Start">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>


    <style name="Hedvig.Theme.EmbarkList">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="Hedvig.Theme.InfoCard">
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/color_divider</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>
