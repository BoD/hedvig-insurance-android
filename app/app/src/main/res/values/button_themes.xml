<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Hedvig.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/hedvig_button_state</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Hedvig.Button.Large">
        <item name="backgroundTint">@color/hedvig_large_button_state</item>
        <item name="android:padding">16dp</item>
        <item name="shapeAppearance">?shapeAppearanceLargeComponent</item>
    </style>

    <style name="Hedvig.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/hedvig_text_button_state</item>
    </style>

    <style name="Hedvig.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?colorPrimary</item>
    </style>

    <style name="Hedvig.Button.Outlined.Large">
        <item name="android:padding">16dp</item>
        <item name="shapeAppearance">?shapeAppearanceLargeComponent</item>
        <item name="strokeColor">?colorPrimary</item>
    </style>

    <style name="Hedvig.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/picker_radio_button_state</item>
    </style>
</resources>