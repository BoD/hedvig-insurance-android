<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Hedvig.Theme.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="Hedvig.Theme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?colorPrimary</item>
    </style>

    <style name="Hedvig.Theme.Toolbar.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Hedvig.Theme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Hedvig.Theme.BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="materialButtonStyle">@style/Hedvig.Button</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Hedvig.Theme.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">
            @style/ThemeOverlay.Hedvig.ShapeAppearance.BottomSheetDialog
        </item>
    </style>

    <style name="Hedvig.Theme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Hedvig.TextInputLayout.FilledBox
        </item>
    </style>

    <style name="ThemeOverlay.Hedvig.TextInputLayout.FilledBox" parent="">
        <item name="editTextStyle">@style/Hedvig.Theme.TextInputEditText.FilledBox</item>
    </style>

    <style name="Hedvig.Theme.TextInputEditText.FilledBox" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!-- Only used inside 1 place in referrals row. Can probably easily remove -->

    <style name="ThemeOverlay.Hedvig.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">?textAppearanceBody1</item>
    </style>

    <style name="Hedvig.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarHeaderLayout">@style/Hedvig.CalendarHeader</item>
        <item name="materialCalendarHeaderSelection">@style/Hedvig.HeaderSelection</item>
        <item name="materialCalendarHeaderToggleButton">@style/HeaderToggleButton1</item>
    </style>

    <style name="HeaderToggleButton1" parent="@style/Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:visibility">gone</item>
    </style>

    <style name="Hedvig.CalendarHeader" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">?colorOnPrimary</item>
    </style>

    <style name="Hedvig.HeaderSelection" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">?colorPrimary</item>
    </style>

</resources>
