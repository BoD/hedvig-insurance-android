<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/SETTINGS_DISPLAY_TITLE">

        <ListPreference
            app:dialogTitle="@string/SETTINGS_THEME_DIALOG_TITLE"
            app:entries="@array/theme_settings"
            app:entryValues="@array/theme_settings_values"
            app:key="theme"
            app:title="@string/SETTINGS_THEME_TITLE"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:entries="@array/language_settings"
            app:entryValues="@array/language_settings_values"
            app:key="language"
            app:title="@string/SETTINGS_LANGUAGE_TITLE"
            app:useSimpleSummaryProvider="true" />

        <Preference
            android:key="market"
            app:title="Change Market"/>

        <Preference
            app:key="notifications"
            app:title="@string/SETTINGS_NOTIFICATIONS_TITLE" />

    </PreferenceCategory>

</PreferenceScreen>