<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Hedvig.Theme.V23" parent="Hedvig.Theme.V21">
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">@bool/light_system_ui</item>
    </style>

    <style name="Hedvig.Theme" parent="Hedvig.Theme.V23" />

    <style name="Hedvig.Theme.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Hedvig.Theme.Offer">
        <item name="android:statusBarColor">@color/dark_purple</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Hedvig.Theme.Marketing">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

