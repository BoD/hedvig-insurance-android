<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/referralSuccessRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|bottom"
    android:orientation="vertical"
    tools:context=".feature.referrals.ReferralsSuccessfulInviteActivity">

    <ImageView
        android:id="@+id/referralSuccessImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_double"
        android:contentDescription="@null"
        android:visibility="gone"
        app:srcCompat="@drawable/illustration_invite_success"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/referralSuccessTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin_triple"
        android:layout_marginTop="@dimen/base_margin_double"
        android:layout_marginEnd="@dimen/base_margin_triple"
        android:layout_marginBottom="@dimen/base_margin_double"
        android:gravity="center"
        android:textAppearance="?textAppearanceHeadline5"
        android:visibility="gone"
        tools:text="@string/REFERRAL_SUCCESS_HEADLINE"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/referralSuccessBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin_triple"
        android:layout_marginEnd="@dimen/base_margin_triple"
        android:layout_marginBottom="@dimen/base_margin_quadruple"
        android:gravity="center"
        android:visibility="gone"
        tools:text="@string/REFERRAL_SUCCESS_BODY"
        tools:visibility="visible" />

    <Button
        android:id="@+id/referralSuccessInvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="@dimen/base_margin_double"
        android:layout_marginBottom="@dimen/base_margin_double"
        android:text="@string/REFERRAL_SUCCESS_BTN_CTA" />

    <Button
        android:id="@+id/referralSuccessCloseButton"
        style="?attr/materialButtonTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/base_margin_quadruple"
        android:text="@string/REFERRAL_SUCCESS_BTN_CLOSE" />
</LinearLayout>