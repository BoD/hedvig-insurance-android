<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addPhoto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/create_key_gear_add_photo_height"
    android:background="@drawable/background_rounded_corners_ripple"
    android:backgroundTint="@color/violet_100"
    android:clickable="true"
    android:elevation="@dimen/key_gear_item_elevation"
    android:focusable="true"
    android:transitionName="addItemRoot">

    <ImageView
        android:id="@+id/addPhotoIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@id/addPhotoLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_add_photo" />

    <TextView
        android:id="@+id/addPhotoLabel"
        style="@style/Body.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin"
        android:text="@string/KEY_GEAR_ADD_ITEM_ADD_PHOTO_BUTTON"
        android:textColor="@color/link_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addPhotoIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>
