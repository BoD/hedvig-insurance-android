<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/base_margin_double"
    android:layout_marginEnd="@dimen/base_margin_double"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contractName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_double"
        android:textAppearance="?textAppearanceHeadline5"
        tools:text="Hemförsäkring" />

    <TextView
        android:id="@+id/contractStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/base_margin"
        android:drawablePadding="@dimen/base_margin"
        android:gravity="center_vertical"
        android:textAppearance="?textAppearanceBody2"
        tools:text="Aktiv" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/renewalCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_double"
        android:padding="@dimen/base_margin_double"
        android:theme="@style/ThemeOverlay.Hedvig.RenewalCard"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_double"
                android:layout_marginTop="@dimen/base_margin_double"
                android:contentDescription="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_refresh" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/base_margin_double"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toTopOf="@id/icon"
                tools:text="@string/info_card_missing_payment.title" />

            <TextView
                android:id="@+id/body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/base_margin"
                android:layout_marginEnd="@dimen/base_margin_double"
                android:textAppearance="?textAppearanceBody2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintTop_toBottomOf="@id/title"
                tools:text="@string/info_card_missing_payment.body" />

            <View
                android:id="@+id/separator"
                android:layout_width="0dp"
                android:layout_height="@dimen/horizontal_line_height"
                android:layout_marginTop="@dimen/base_margin_double"
                android:background="@drawable/background_square"
                android:backgroundTint="@color/separator_on_surface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/body" />

            <Button
                android:id="@+id/action"
                style="?materialButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/base_margin_double"
                android:layout_marginEnd="@dimen/base_margin"
                android:layout_marginBottom="@dimen/base_margin_half"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/separator"
                tools:text="@string/info_card_missing_payment.button_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/contractInformationCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_double"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/contractInformationIcon"
                android:layout_width="@dimen/peril_category_icon_size"
                android:layout_height="@dimen/peril_category_icon_size"
                android:layout_marginStart="@dimen/base_margin_double"
                android:layout_marginTop="@dimen/base_margin_triple"
                android:layout_marginBottom="@dimen/base_margin_triple"
                android:contentDescription="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/ic_apartment" />

            <TextView
                android:id="@+id/contractInformationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_double"
                android:layout_marginTop="@dimen/base_margin_triple"
                android:text="@string/DASHBOARD_MY_INFO_TITLE"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintBottom_toTopOf="@id/contractInformationDescription"
                app:layout_constraintStart_toEndOf="@id/contractInformationIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/contractInformationDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_margin_triple"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAppearance="?textAppearanceBody2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/contractInformationInfoIcon"
                app:layout_constraintStart_toStartOf="@id/contractInformationTitle"
                app:layout_constraintTop_toBottomOf="@id/contractInformationTitle"
                tools:text="Karl Johans gate 23 ∙ 2 medforsikrade" />

            <ImageView
                android:id="@+id/contractInformationInfoIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_double"
                android:layout_marginEnd="@dimen/base_margin_double"
                android:contentDescription="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_info"
                app:tint="?colorPrimary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/coverageCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/coverageCategoryIcon"
                android:layout_width="@dimen/peril_category_icon_size"
                android:layout_height="@dimen/peril_category_icon_size"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/base_margin_double"
                android:contentDescription="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_coverage" />

            <TextView
                android:id="@+id/coverageCategoryTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_double"
                android:layout_marginTop="@dimen/base_margin_triple"
                android:layout_marginEnd="@dimen/base_margin"
                android:text="@string/DASHBOARD_MY_COVERAGE_TITLE"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintBottom_toTopOf="@id/coverageCategorySubtitle"
                app:layout_constraintEnd_toStartOf="@id/coverageInfoIcon"
                app:layout_constraintStart_toEndOf="@id/coverageCategoryIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/coverageCategorySubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_double"
                android:layout_marginEnd="@dimen/base_margin"
                android:layout_marginBottom="@dimen/base_margin_triple"
                android:text="@string/DASHBOARD_MY_COVERAGE_SUBTITLE"
                android:textAppearance="?textAppearanceBody2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/coverageInfoIcon"
                app:layout_constraintStart_toEndOf="@id/coverageCategoryIcon"
                app:layout_constraintTop_toBottomOf="@id/coverageCategoryTitle" />

            <ImageView
                android:id="@+id/coverageInfoIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/base_margin_double"
                android:contentDescription="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_info"
                app:tint="?colorPrimary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/documentsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/documentsCategoryIcon"
                android:layout_width="@dimen/peril_category_icon_size"
                android:layout_height="@dimen/peril_category_icon_size"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/base_margin_double"
                android:contentDescription="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_my_documents" />

            <TextView
                android:id="@+id/documentsCategoryTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_double"
                android:layout_marginTop="@dimen/base_margin_triple"
                android:layout_marginEnd="@dimen/base_margin"
                android:text="@string/DASHBOARD_MY_DOCUMENTS_TITLE"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintBottom_toTopOf="@id/documentsCategorySubtitle"
                app:layout_constraintEnd_toStartOf="@id/documentsInfoIcon"
                app:layout_constraintStart_toEndOf="@id/documentsCategoryIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/documentsCategorySubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_double"
                android:layout_marginEnd="@dimen/base_margin"
                android:layout_marginBottom="@dimen/base_margin_triple"
                android:text="@string/DASHBOARD_MY_DOCUMENTS_SUBTITLE"
                android:textAppearance="?textAppearanceBody2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/documentsInfoIcon"
                app:layout_constraintStart_toEndOf="@id/documentsCategoryIcon"
                app:layout_constraintTop_toBottomOf="@id/documentsCategoryTitle" />

            <ImageView
                android:id="@+id/documentsInfoIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/base_margin_double"
                android:contentDescription="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_info"
                app:tint="?colorPrimary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>