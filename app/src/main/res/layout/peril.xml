<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/base_margin"
    android:layout_marginTop="@dimen/base_margin_double"
    android:layout_marginEnd="@dimen/base_margin"
    android:layout_marginBottom="@dimen/base_margin_double"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/peril_icon"
        android:layout_height="@dimen/peril_icon"
        android:layout_gravity="center_horizontal"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@null"
        tools:src="@drawable/ic_legal" />

    <TextView
        android:id="@+id/text"
        android:layout_width="@dimen/peril_width"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/base_margin"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textAppearance="?textAppearanceBody3"
        app:autoSizeMaxTextSize="@dimen/text_xsmall"
        app:autoSizeMinTextSize="@dimen/text_xxsmall"
        app:autoSizeTextType="uniform"
        tools:text="Juridisk\ntvist" />

</LinearLayout>