<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.keygear.ui.itemdetail.KeyGearItemDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/base_margin_double">

        <LinearLayout
            android:id="@+id/scrollViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/base_margin_quintuple">

            <include
                android:id="@+id/photosSection"
                layout="@layout/key_gear_item_detail_photos_section" />

            <LinearLayout
                android:id="@+id/postPhotosSections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:orientation="vertical"
                android:translationY="50dp"
                android:visibility="gone"
                tools:alpha="1"
                tools:translationY="0dp"
                tools:visibility="visible">

                <include
                    android:id="@+id/valuationSection"
                    layout="@layout/key_gear_item_detail_valuation_section" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/horizontal_line_height"
                    android:layout_marginTop="@dimen/base_margin_quintuple"
                    android:background="@color/separator" />

                <include
                    android:id="@+id/coverageSection"
                    layout="@layout/key_gear_item_detail_coverage_section" />

                <include
                    android:id="@+id/receiptSection"
                    layout="@layout/key_gear_item_detail_receipt_section" />

            </LinearLayout>

            <!--            <FrameLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content">-->

            <!--                <androidx.viewpager2.widget.ViewPager2-->
            <!--                    android:id="@+id/photos"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="480dp" />-->

            <!--                <com.hedvig.app.ui.view.PagerIndicatorView-->
            <!--                    android:id="@+id/pagerIndicator"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_gravity="center_horizontal|bottom"-->
            <!--                    android:layout_marginBottom="@dimen/base_margin_double" />-->

            <!--            </FrameLayout>-->

            <TextView
                style="@style/Headline.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_triple"
                android:layout_marginTop="@dimen/base_margin_quintuple"
                android:text="@string/KEY_GEAR_ITEM_VIEW_COVERAGE_TABLE_TITLE" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/horizontal_line_height"
                android:layout_marginTop="@dimen/base_margin_quintuple"
                android:background="@color/separator" />

            <TextView
                style="@style/Headline.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_triple"
                android:layout_marginTop="@dimen/base_margin_quintuple"
                android:text="@string/KEY_GEAR_ITEM_VIEW_ITEM_NAME_TABLE_TITLE" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_triple"
                android:layout_marginTop="@dimen/base_margin"
                android:layout_marginEnd="@dimen/base_margin_triple">

                <TextView
                    android:id="@+id/name"
                    style="@style/Body.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobiltelefon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.hedvig.app.ui.view.HedvigEditText
                    android:id="@+id/nameEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:alpha="0"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:visibility="gone"
                    app:hintText="Namn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <Button
                    android:id="@+id/addName"
                    style="@style/Body.Regular.Link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/base_margin_triple"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/KEY_GEAR_ITEM_VIEW_ITEM_NAME_EDIT_BUTTON"
                    android:textAllCaps="false"
                    android:textColor="@color/link_purple"
                    android:theme="@style/Body.Regular.Link"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!--TODO translation-->
                <Button
                    android:id="@+id/saveName"
                    style="@style/Body.Regular.Link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/base_margin_triple"
                    android:background="?attr/selectableItemBackground"
                    android:text="Spara"
                    android:textAllCaps="false"
                    android:textColor="@color/link_purple"
                    android:theme="@style/Body.Regular.Link"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/horizontal_line_height"
                android:layout_marginTop="@dimen/base_margin_quintuple"
                android:background="@color/separator" />

            <TextView
                style="@style/Headline.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_triple"
                android:layout_marginTop="@dimen/base_margin_quintuple"
                android:text="@string/KEY_GEAR_ITEM_VIEW_RECEIPT_TABLE_TITLE" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="?attr/actionBarSize" />

</FrameLayout>
