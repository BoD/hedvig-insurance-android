<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.keygear.ui.itemdetail.KeyGearItemDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/postCreate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/link_purple"
        android:visibility="invisible"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/createdAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_margin_octuple"
            android:contentDescription="@null"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/createdLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_fire_green"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/createdLabel"
            style="@style/Headline.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/KEY_GEAR_ADD_ITEM_SUCCESS"
            android:textColor="@color/white"
            android:translationY="@dimen/base_margin_triple"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/createdAnimation"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>