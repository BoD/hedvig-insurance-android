<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.claims.ui.ClaimsFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/claimsNestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_navigation_height">

            <include
                layout="@layout/loading_spinner"
                android:layout_width="@dimen/loading_spinner_width"
                android:layout_height="@dimen/loading_spinner_height"
                android:layout_gravity="center" />

            <LinearLayout
                android:id="@+id/claimsViewContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_double"
                android:layout_marginEnd="@dimen/base_margin_double"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <com.hedvig.app.ui.view.HedvigCardView
                    android:id="@+id/insuranceInactiveMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin_double"
                    android:padding="@dimen/base_margin_double"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/CLAIMS_INACTIVE_INSURANCE_MESSAGE"
                        android:textAppearance="?attr/textAppearanceBody2" />

                </com.hedvig.app.ui.view.HedvigCardView>

                <ImageView
                    android:id="@+id/claimsIllustration"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/claims_fragment_image_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/base_margin_double"
                    android:contentDescription="@null"
                    android:visibility="gone"
                    app:srcCompat="@drawable/claims_illustration"
                    tools:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin_triple"
                    android:gravity="center"
                    android:text="@string/CLAIMS_CREATE_CLAIM_TITLE"
                    android:textAppearance="?textAppearanceHeadline5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin"
                    android:gravity="center"
                    android:text="@string/CLAIMS_CREATE_CLAIM_DESCRIPTION"
                    android:textAppearance="?textAppearanceBody2" />

                <Button
                    android:id="@+id/commonClaimCreateClaimButton"
                    style="?attr/materialButtonContainedLargeStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="@dimen/base_margin_triple"
                    android:background="@drawable/button_primary"
                    android:text="@string/CLAIMS_CREATE_CLAIM_BUTTON_LABEL"
                    tools:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin_quadruple"
                    android:text="@string/CLAIMS_QUICK_ACTIONS"
                    android:textAppearance="?textAppearanceSubtitle1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/commonClaimsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin"
                    android:layout_marginBottom="@dimen/base_margin"
                    android:clipToPadding="false"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:itemCount="3"
                    tools:listitem="@layout/claim_bulletpoint_row" />

            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>