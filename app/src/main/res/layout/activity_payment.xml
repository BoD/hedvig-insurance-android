<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.profile.ui.payment.PaymentActivity">

    <include layout="@layout/app_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?attr/actionBarSize"
            android:orientation="vertical">

            <include layout="@layout/loading_spinner" />

            <com.hedvig.app.ui.view.HedvigCardView
                android:id="@+id/failedPaymentsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_double"
                android:layout_marginTop="@dimen/base_margin_double"
                android:layout_marginEnd="@dimen/base_margin_double"
                android:visibility="gone"
                tools:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/coral_200"
                    android:orientation="horizontal"
                    android:padding="@dimen/base_margin_double">

                    <ImageView
                        android:layout_width="@dimen/icon_failure_small_size"
                        android:layout_height="@dimen/icon_failure_small_size"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/icon_failure" />

                    <TextView
                        android:id="@+id/failedPaymentsParagraph"
                        style="@style/Body.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/base_margin"
                        tools:text="Du ligger 3 m책nader efter med dina betalningar. Vi kommer att dra mer pengar 채n din odinarie premie den 21 juni, 2019." />

                </LinearLayout>

            </com.hedvig.app.ui.view.HedvigCardView>

            <com.hedvig.app.ui.view.HedvigCardView
                android:id="@+id/nextPaymentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_double"
                android:layout_marginTop="@dimen/base_margin_double"
                android:layout_marginEnd="@dimen/base_margin_double">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="true"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_top_rounded_corners"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/base_margin_double"
                        android:paddingTop="@dimen/base_margin_double"
                        android:paddingEnd="@dimen/base_margin_double"
                        android:paddingBottom="@dimen/base_margin">

                        <TextView
                            android:id="@+id/nextPaymentLabel"
                            style="@style/Body.Small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/PAYMENTS_CARD_TITLE"
                            android:textColor="@color/off_white"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/nextPaymentAmount"
                            style="@style/Header.Large.Negative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/base_margin"
                            app:layout_constraintTop_toBottomOf="@id/nextPaymentLabel"
                            tools:text="139 kr" />

                        <TextView
                            android:id="@+id/nextPaymentGross"
                            style="@style/Body.Small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/off_white"
                            android:visibility="invisible"
                            app:layout_constraintTop_toBottomOf="@id/nextPaymentAmount"
                            tools:text="179 kr/m책n"
                            tools:visibility="visible" />

                        <FrameLayout
                            android:id="@+id/freeMonthsSphere"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/sphere"
                            android:backgroundTint="@color/coral_500"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/freeMonths"
                                style="@style/Body.XSmall.Negative"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:lineSpacingExtra="0sp"
                                tools:text="3\nGratis\nm책nader" />


                        </FrameLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_margin_double"
                        android:layout_marginBottom="@dimen/base_margin_double">

                        <TextView
                            android:id="@+id/nextPaymentDateLabel"
                            style="@style/Body.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/base_margin_double"
                            android:text="@string/PAYMENTS_CARD_DATE" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/nextPaymentDate"
                            style="@style/Body.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/base_margin_double"
                            android:background="@drawable/rounded_corners_background_light_gray"
                            android:paddingStart="@dimen/base_margin"
                            android:paddingTop="@dimen/base_margin_half"
                            android:paddingEnd="@dimen/base_margin"
                            android:paddingBottom="@dimen/base_margin_half"
                            tools:text="2019-06-27" />

                    </LinearLayout>

                </LinearLayout>

            </com.hedvig.app.ui.view.HedvigCardView>

            <com.hedvig.app.ui.view.HedvigCardView
                android:id="@id/connectBankAccountContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin"
                android:layout_marginTop="@dimen/base_margin_triple"
                android:layout_marginEnd="@dimen/base_margin"
                android:visibility="gone"
                tools:visibility="gone">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@id/cardTitle"
                        style="@style/Headline.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/base_margin_triple"
                        android:layout_marginTop="@dimen/base_margin_triple"
                        android:text="@string/PROFILE_PAYMENT_CONNECT_DIRECT_DEBIT_TITLE"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@id/cardParagraph"
                        style="@style/Body.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="@dimen/base_margin"
                        android:layout_marginEnd="20dp"
                        android:text="@string/PROFILE_PAYMENT_CONNECT_DIRECT_DEBIT_DESCRIPTION"
                        app:layout_constraintTop_toBottomOf="@id/cardTitle" />

                    <View
                        android:id="@id/cardSeparator"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/base_margin_triple"
                        android:background="@color/light_gray"
                        app:layout_constraintTop_toBottomOf="@id/cardParagraph" />

                    <Button
                        android:id="@id/connectBankAccount"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/base_margin_double"
                        android:text="@string/PROFILE_PAYMENT_CONNECT_DIRECT_DEBIT_BUTTON"
                        android:theme="@style/DialogButton"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardSeparator" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.hedvig.app.ui.view.HedvigCardView>

            <LinearLayout
                android:id="@+id/campaignInformationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_double"
                android:layout_marginTop="@dimen/base_margin_quadruple"
                android:layout_marginEnd="@dimen/base_margin_double"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/campaignInformationTitle"
                    style="@style/Headline.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Aktuell kampanj" />

                <TextView
                    android:id="@+id/campaignInformationLabelOne"
                    style="@style/Body.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin_double"
                    tools:text="Fr책n" />

                <TextView
                    android:id="@+id/campaignInformationFieldOne"
                    style="@style/Body.Regular.Emphasized"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin"
                    tools:text="Partner XYZ" />

                <TextView
                    android:id="@+id/lastFreeDayLabel"
                    style="@style/Body.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin_quadruple"
                    android:visibility="gone"
                    tools:text="Sista gratisdatum"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/lastFreeDay"
                    style="@style/Body.Regular.Emphasized"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin"
                    android:visibility="gone"
                    tools:text="2019-06-28"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/willUpdateWhenStartDateIsSet"
                    style="@style/Body.XSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin_quadruple"
                    android:textColor="@color/gray"
                    android:visibility="gone"
                    tools:text="N채r din gamla f철rs채kring 채r uppsagd och vi har ett startdatum f철r din f철rs채kring hos Hedvig kommer denna sektion uppdateras."
                    tools:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/paymentHistoryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_margin_quadruple"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    style="@style/Headline.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/base_margin_double"
                    tools:text="Tidigare betalningar" />

                <LinearLayout
                    android:id="@+id/prevPaymentsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <com.hedvig.app.feature.profile.ui.ProfileMenuRow
                    android:id="@+id/seePaymentHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:name="Se historik" />

            </LinearLayout>

            <LinearLayout
                android:id="@id/paymentDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_double"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    style="@style/Headline.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Betalningsmetod" />

                <TextView
                    android:id="@+id/bankTitle"
                    style="@style/Headline.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin_triple"
                    android:text="@string/PROFILE_PAYMENT_BANK_LABEL" />

                <TextView
                    android:id="@id/bankName"
                    style="@style/Body.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin_triple"
                    tools:text="SEB" />

                <TextView
                    android:id="@id/accountNumber"
                    style="@style/Body.Regular.Emphasized"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin"
                    tools:text="**** 8347" />

                <TextView
                    android:id="@id/bankAccountUnderChangeParagraph"
                    style="@style/Body.XSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_margin_double"
                    android:layout_marginEnd="@dimen/base_margin_triple"
                    android:text="@string/PROFILE_PAYMENT_BANK_ACCOUNT_CHANGED_DESCRIPTION"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

            <View
                android:id="@id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/base_margin_triple"
                android:background="@color/light_gray"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@id/changeBankAccount"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/base_margin_triple"
                android:text="@string/PROFILE_PAYMENT_CHANGE_BANK_ACCOUNT"
                android:textAllCaps="false"
                android:theme="@style/Body.Small.Link.Emphasized"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/redeemCode"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/REFERRAL_ADDCOUPON_HEADLINE"
                android:textAllCaps="false"
                android:theme="@style/Body.Small.Link.Emphasized"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/connectBankAccountWithLink"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/PROFILE_PAYMENT_CONNECT_DIRECT_DEBIT_WITH_LINK_BUTTON"
                android:textAllCaps="false"
                android:theme="@style/Body.Small.Link.Emphasized"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

